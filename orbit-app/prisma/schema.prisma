// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // (optional) you can later switch to "prisma-client" + custom output,
  // but this is fine for now.
}

datasource db {
  provider = "postgresql"
  // no url here in Prisma 7 â€“ it lives in prisma.config.ts
}

model User {
  id          String   @id @default(cuid())
  stackUserId String   @unique
  email       String   @unique
  name        String?
  imageUrl    String?

  // Profile fields
  username    String?  @unique
  headline    String?
  bio         String?
  timezone    String?

  defaultIntensity String?
  defaultWeeks     Int?

  // ===== Billing (Stripe) =====
  plan               String   @default("free") // "free" | "pro"
  stripeCustomerId   String?  @unique
  stripeSubscriptionId String? @unique
  subscriptionStatus String?  // "active" | "trialing" | "past_due" | "canceled" | ...
  currentPeriodEnd   DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  plans       Plan[]
}


model Plan {
  id             String   @id @default(cuid())
  title          String
  goalInput      String
  timeframeWeeks Int
  intensity      String

  // keep this optional for now so existing NULL rows don't break migrations
  userId         String?
  user           User?    @relation(fields: [userId], references: [id])

  status         String   @default("draft") // "draft" | "generating" | "ready" | "error"
  outputJson     Json?                     // full AI-generated plan
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  stepProgresses PlanStepProgress[]
  @@index([userId])
}

model PlanStepProgress {
  id          String   @id @default(cuid())
  plan        Plan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  planId      String
  stepIndex   Int
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt


  @@index([planId])
  @@unique([planId, stepIndex])
}
