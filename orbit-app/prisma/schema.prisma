// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // ❌ no url here in Prisma 7 – it's in prisma.config.ts now
}

model Plan {
  id             String   @id @default(cuid())
  title          String
  goalInput      String
  timeframeWeeks Int
  intensity      String
  userId         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
