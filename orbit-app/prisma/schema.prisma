// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  // (optional) you can later switch to "prisma-client" + custom output,
  // but this is fine for now.
}

datasource db {
  provider = "postgresql"
  // no url here in Prisma 7 â€“ it lives in prisma.config.ts
}

model Plan {
  id             String   @id @default(cuid())
  title          String
  goalInput      String
  timeframeWeeks Int
  intensity      String
  userId         String?
  status         String   @default("draft") // "draft" | "generating" | "ready" | "error"
  outputJson     Json?                     // full AI-generated plan
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

